{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"verbatimModuleSyntax": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"]
	},
	"include": ["**/*.ts", "**/*.svelte", "src/types/**/*.d.ts"],
	"exclude": ["references/", "**/*.test.ts", "__mocks__"]
}
