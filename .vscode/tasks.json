{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run unit tests",
			"type": "shell",
			"command": "npm test",
			"args": [],
			"problemMatcher": [
				"$tsc"
			],
			"group": "test"
		},
		{
			"label": "Validate Markdown with Mermaid",
			"type": "shell",
			"command": "mermaid-md-validate",
			"args": [
				".specs/**/design.md"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": [
				"$markdownlint"
			]
		}
	]
}
